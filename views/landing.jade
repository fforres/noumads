extends layout_landing

block content
  div#notcarrousel.row.soon
    div.background
    div.vertical-align
      div.row.landing.visible-lg
        div.col-lg-12.aviso
          div.col-lg-12
          div.col-lg-3.foto.col-lg-offset-1
            img.img-responsive.centered(src='images/logos/transparent_medium_400.png')
          div.col-lg-8.title
            h1 ¡Ya estamos listos!
            h1
              small
                | Ya estamos distribuyendo Traverse en Chile
                i.fa.fa-beer.fa-fw
              small  
        .col-lg-12
          hr
        .col-lg-12.contacts
          .col-lg-12
            .col-lg-6
              h2 Puedes contactarnos y realizar tus pedidos ingresando tu correo
            .col-lg-6
              h2 O a través de nuestras redes sociales
          .col-lg-12.maneras
            .col-lg-6
              .form-group.input-group.input-group-lg
                input.email.form-control.input-lg(type='email', name='email', placeholder='ejemplo@cervezatraverse.com')
                span.input-group-btn
                  a.btn.btn-default.saveMail(type='button') Envía!
            .col-lg-6 
                h2.socialLinks
                  a.SocialLink.twitter(href='https://twitter.com/noumads')
                    i.fa.fa-twitter-square.fa-fw
                  a.SocialLink.facebook(href='https://www.facebook.com/noumads')
                    i.fa.fa-facebook-square.fa-fw   
                  a.SocialLink.instagram(href='http://instagram.com/noumads')
                    i.fa.fa-instagram.fa-fw             
      div.row.landing.hidden-lg.hidden-xs
