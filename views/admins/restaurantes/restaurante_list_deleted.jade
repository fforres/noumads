extends ../layoutAdmins

block content
	.row.initial
		.col-xs-11.col-sm-11.col-centered
				include ../../snipets/errors
				.table-responsive
					table.table.table-condensed
						thead
							tr
								th #
								th Nombre
								th Url
								th Des-Borrar
						tbody
							each restaurant,i in restaurantes
								tr
									td #{i+1}
									td
										strong
											a(href="#{restaurant.web}") #{restaurant.nombre}
									td
										a(href="#{restaurant.web}") #{restaurant.web}
										
									td
										a(href="/admins/restaurantes/undelete/#{restaurant._id}") 
											i.fa.fa-mail-reply.fa-fw 